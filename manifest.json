{
  "manifest_version": 2,
  "name": "tplus-trello",
  "version": "0.0.2",
  "description": "Helper to work with Track+ and Trello",
  "icons": {"300": "images/logo.png"},
  "content_scripts": [
    {
      "matches": ["https://trello.com/b/*"],
      "js": ["data/js/functions.js"]
    }
  ],
  "browser_action": {
    "default_icon": "images/logo.png"
  },
  "homepage_url": "http://github.com/carloscmaleno",
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources":["data/img/icon_badge.ico"]
}
